<div class="row">
     <nav id="titleBar" class="navbar navbar-expand-lg navbar-light titleBar mb-5">
            <ul class="navbar-nav abs-center-x">

                <li class="nav-item">
                    <h2 id="titleLogo" class=" main-logo navbar-brand gradient-text" >SCRAPROOM</h2>
                </li>

            </ul>
        </nav>
    <aside class="col-sm-4"></aside>
    <aside class="col-sm-4 mt-5">
        <div class="card">
            <article class="card-body main-card">
                <h4 class="card-title  signs text-center mb-4 mt-1">Sign Up</h4>
                <p class="text-success text-center"></p>
                {{#if message}}
                <div class="alert alert-danger">{{message}}</div>
                {{/if}}
                <form action="/signup" method="POST">
                    <div class="form-group">
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text bg-dark text-white login-cred"> <i class="fa fa-user"></i> </span>
                            </div>
                            <input name="email" class="form-control login-cred" placeholder="Email" type="email">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text bg-dark text-white login-cred"> <i class="fa fa-user"></i> </span>
                            </div>
                            <input name="username" class="form-control login-cred" placeholder="Username" type="text">
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text bg-dark text-white login-cred"> <i class="fa fa-lock"></i> </span>
                            </div>
                            <input name="password" class="form-control login-cred" placeholder="******" type="password">
                        </div>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn mouse-cursor-gradient-tracking"> Sign Up </button>
                    </div>
                    <p class="text-center">Already have an account? <a  id="signUp-btn" href="/login">Login</a></p>
                </form>
            </article>
        </div>
    </aside>
    <aside class="col-sm-4"></aside>
</div>